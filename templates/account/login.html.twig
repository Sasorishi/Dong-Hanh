{% extends 'base.html.twig' %}
{% block body %}

<form method="POST" action="{{ path('app_login') }}">
    <section class="container login">
        {% if error %}
        <div class="row">
            <div class="alert alert-danger" role="alert">
                Wrong password or email. {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
        {% endif %}
        <div class="row">
            <div class="col-12 col-sm-6 col-md-7 login-section">
            </div>
            <div class="col-12 col-sm-6 col-md-5 form-section d-flex flex-column">
                <div class="login-wrapper">
                    <h2 class="login-title">Connection</h2>
                    <div class="form-group mb-3">
                        <label for="email" class="sr-only">Email</label>
                        <input type="email" name="_username" class="form-control" id="InputEmail" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="password" class="sr-only">Password</label>
                        <input type="password" name="_password" class="form-control" id="InputPassword"
                            placeholder="Password">
                    </div>
                    <div class="row">
                        <div class="d-md-flex text-center align-items-center justify-content-md-center">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button type="submit" name="register" class="btn btn-dark-blue btn-lg">Login</button>
                        </div>
                    </div>

                </div>
                <div class="footer-wrapper">
                    <p class="login-wrapper-footer-text">Need an account? <a href="{{ path('app_signin') }}"
                            class="text-reset">Signup
                            here</a></p>
                    <p class="login-wrapper-footer-text">Need a password reset? <a href="{{ path('app_forgotten_password') }}" class="text-reset">Click
                            here</a></p>
                </div>
            </div>
        </div>
    </section>
</form>

{# <div id="root"></div> #}

{% endblock %}